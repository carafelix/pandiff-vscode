{
  "name": "pandiff-vscode",
  "displayName": "Pandiff - Text Difference Render",
  "description": "Pandiff integration in VScode",
  "version": "0.0.3",
  "publisher": "HeroProtagonist",
  "icon": "img/feather.png",
  "repository": "https://github.com/carafelix/pandiff-vscode",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pandiff-vscode.difs",
        "title": "Pandiff - Select two files for comparison"
      },
      {
        "command": "pandiff-vscode.compareRevision",
        "title": "Pandiff - View diffs from revision"
      },
      {
        "command": "pandiff-vscode.editStyles",
        "title": "Pandiff - Edit styles file"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resource =~ /\\.(docx|odt|epub|pdf|md|txt)$/",
          "command": "pandiff-vscode.compareRevision",
          "group": "3_compare@999"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "pandiff": "^0.6.0",
    "simple-git": "^3.19.1"
  }
}
